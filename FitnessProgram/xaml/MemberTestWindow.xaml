<Window x:Class="FitnessProgram.MemberTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessProgram"
        mc:Ignorable="d"
        Title="MemberTestWindow" Height="450" Width="800">
    <Grid Background="Black">
        <ItemsControl ItemsSource="{Binding Activities}" Margin="250,0,0,0" VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="{Binding}" Foreground="White" FontSize="20" Width="200" TextWrapping="Wrap"/>
                        <Button Content="Action" Margin="10,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock x:Name="AmmountBlock" Foreground="White" FontSize="20" HorizontalAlignment="Left" Margin="462,0,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center"/>

        <Label 
        Grid.Row="0"
        Content="Aktiviteter" 
        Foreground="White"
        HorizontalAlignment="Center" 
        Margin="0,35,0,0" 
        FontSize="20" 
        FontWeight="Bold" 
        VerticalAlignment="Top"/>

        <Button 
        Grid.Row="0"
        Content="Tilbage"
        Foreground="White"
        Background="DeepSkyBlue"
        HorizontalAlignment="Right" 
        VerticalAlignment="Top"
        Width="45"
        Height="25"
        Margin="0,73,50,0" 
        />
    </Grid>


</Window>
